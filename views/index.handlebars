<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create Event</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="event-form">
  			<div class="form-group">
  			  <label for="exampleInputEmail1">Event Title</label>
  			  <input class="form-control" id="input_eventName" placeholder="Enter event name">
  			</div>
  			<div class="form-group">
  			  <label for="exampleInputPassword1">Location</label>
  			  <input class="form-control" id="input_eventLocation" placeholder="Location Name">
  			</div>
			<div class="form-group">
  			  <label for="exampleInputPassword1">Description</label>
  			  <input class="form-control" id="input_description" placeholder="description">
  			</div>  
			<div class="form-group">
  			  <label for="exampleInputPassword1">Day and Time</label>
				<div class="row">
				<div class="col">
					<input data-format="dd/MM/yyyy" class="form-control" id="input_date" placeholder="dd/MM/yyyy">
				</div>
				<div class="col">
					<input data-format="hh:mm:ss" class="form-control" id="input_time" placeholder="hh:mm:ss">
				</div>
				</div>
  			</div>
			<div class="form-group">
  			  <label for="exampleInputPassword1">Attendees</label>
			  <select class="custom-select option-menu" id="input_attendees">
			    <option>Jimbo Smith</option>
					<option>Ralph Ralphinson</option>
					<option>Bilbo Baggins</option>
					<option>Jane Doe</option>
			  </select>
  			</div>  
			<div class="modal-footer">
        		<button type="submit" id ="create-event" class="btn btn-primary">Submit</button>
      		</div>
		</form>
      </div>
    </div>
  </div>
</div>

<p style="display:none;" ><span id="city" data-city="{{fan.city}}"><span></span></p>
<div class="teamBanner">
	<div class="row">
	</div>
